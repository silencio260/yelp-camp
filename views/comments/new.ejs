<% include ../partials/header %>

<div class="container  form-style text-center">
    <form action="/campground/<%= campground._id %>/comments " method="POST">
    
        <h1>Add a comment to <%= campground.name %> </h1>
    
        <div class="form-group">
            <input class="form-control form-control-lg" type="text" name="comment[content]" placeholder="text">
        </div>
    
        <div class="form-group">
            <input class="form-control form-control-lg" type="text" name="comment[author]" placeholder="Author">
        </div>
    
        <button class="btn btn-primary btn-lg btn-block"> Submit </button>
    
    </form>
</div>


