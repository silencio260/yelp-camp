<% include ../partials/header %>

<div class="container">
    <div class="row">

        <div class="col-md-3">
            <p class="lead">Yelp camp</p>
            <div class="list-group">
                <div class="list-group-item active"> list 1</div>
                <div class="list-group-item "> list 2</div>
                <div class="list-group-item "> list 3</div>
            </div>
        </div>


        <div class="col-md-9">

            <div class="img-thumbnail">
            
                <img src="/<%= campground.image %>" alt="image" class="">
                    
                <div class="ruk-spacing">
                    <h4> <%= campground.name %></h4>
                        
                    <p>
                        <%= campground.description %>
                    </p>
                </div>            
            </div>

            <div class="ruk-well">

                <p>
                    <a class="btn btn-success"
                          href="/campground/<%= campground._id %>/comments/new">Add comment</a>
                </p>
                           
            </div>
            <% campground.comments.forEach(function(comment){ %>

                <p>
                <strong> <%= comment.author %> </strong> - <%= comment.content %>
                </p>
            
                
            <% }); %>
            

        </div>

    </div>
</div>



<% include ../partials/footer %>

